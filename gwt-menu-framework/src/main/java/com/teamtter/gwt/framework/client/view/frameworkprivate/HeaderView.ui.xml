<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:container="urn:import:com.sencha.gxt.widget.core.client.container"
    xmlns:gxt="urn:import:com.sencha.gxt.widget.core.client" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
    <ui:style>
        .main {
            background: url("appSample/images/headerBackground1.jpg") no-repeat scroll 0 0 #FFFFFF;
            height: 100px;
        }
        
        .rightMenu {
            float: right;
        }
        
        .menu {
            position: absolute;
            bottom: 0px;
        }
    </ui:style>

    <g:HTMLPanel>

        <div class="{style.main}">
            <div class="{style.rightMenu}">
                <g:InlineLabel ui:field="nameLabel" />
                |
                <g:Anchor href="">Rules</g:Anchor>
                |
                <g:Anchor href="mailto:toto@teamtter.com">Feedback</g:Anchor>
                |
                <g:Anchor ui:field="logOutAnchor" href="#" text="Log out" />
            </div>

            <h1>Web Page Template</h1>

            <div class="{style.menu}">
                <g:SimplePanel ui:field="headerMenuPanel" />
            </div>
        </div>

    </g:HTMLPanel>


</ui:UiBinder>



